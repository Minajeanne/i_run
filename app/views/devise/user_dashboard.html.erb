<h1><%= current_user.name %>'s Dashboard</h1>
<!-- add date? -->
<p>What do you want to do?</p>

<!-- add a PR  -->
<div class="dashboard row">
  <div class="btn btn-md btn-primary buttons">
    <%= link_to "Add a PR", new_user_prs_path(current_user) %>
  </div>
</div>

<!-- view PRs  -->
<div class="dashboard row">
  <div class="btn btn-md btn-primary buttons">
    <%= link_to "View Your PRs", user_prs_path(current_user) %>
  </div>
</div>

<!-- add an upcoming race  -->
<div class="dashboard row">
  <div class="btn btn-md btn-primary buttons">
    <%= link_to "Add an Upcoming Race", new_race_path(current_user) %>
  </div>
</div>

<!-- view past races  -->
<div class="dashboard row">
  <div class="btn btn-md btn-primary buttons">
    <%= link_to "View Past Races", race_path(current_user) %>
  </div>
</div>

<!-- Change Race Status -->
<div class="dashboard row">
  <div class="btn btn-md btn-primary buttons">
    <%= link_to "Change a Race's Status", race_stats_path(current_user) %>
  </div>
</div>
