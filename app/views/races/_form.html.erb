<%= form_for race do |f| %>
<div class="">
  <div class="row">
    <%= f.label :name, "Race Name" %>
  </div>

  <div class="row">
      <%= f.text_field :name %>
  </div>

  <div class="">
    <div class="row">
      <%= f.label :distance, "Distance" %>
    </div>
  </div>

  <div class="row">
      <%= f.text_field :distance %>
  </div>

  <div class="">
    <div class="row">
      <% f.fields_for :locations_attributes, locations do |locations| %>
        <% locations.label :name, "Location" %>
        <br>
        <% locations.text_field :name %>
      <% end %>
    </div>
  </div>

  <div class="">
    <div class="row">
      <%= f.label :event_date, "Date" %>
    </div>
  </div>

  <div class="row">
      <%= f.text_field :event_date %>
  </div>

  <div class="row buttons">
    <%= f.submit %>
  </div>
  <% end %>
</div>
