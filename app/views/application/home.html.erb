<h1>Welcome to I Run</h1>
<% if user_signed_in? %>
<h2>Hello, <%= current_user.first_name%>!</h2>

<!-- add date? -->
<p>What do you want to do?</p>

<!-- add a PR  -->
<div class="dashboard row">
  <div class="btn btn-md btn-primary buttons">
    <%= link_to "Add a PR", new_user_pr_path(current_user) %>
  </div>
</div>

<!-- view PRs  -->
<div class="dashboard row">
  <div class="btn btn-md btn-primary buttons">
    <%= link_to "View Your PRs", user_pr_path(current_user) %>
  </div>
</div>

<!-- add an upcoming race  -->
<div class="dashboard row">
  <div class="btn btn-md btn-primary buttons">
    <%= link_to "Add an Upcoming Race", new_race_path(current_user) %>
  </div>
</div>

<!-- view past races  -->
<div class="dashboard row">
  <div class="btn btn-md btn-primary buttons">
    <%= link_to "View Past Races", race_path(current_user) %>
  </div>
</div>

<!-- change race's status -->
<div class="dashboard row">
  <div class="btn btn-md btn-primary buttons">
    <%= link_to "Change a Race's Status", stats_path(current_user) %>
  </div>
</div>
<% end%>
